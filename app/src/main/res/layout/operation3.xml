<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="669dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/operation"
        android:layout_marginTop="6dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="订购原料"
            android:drawableTop="@drawable/buy1"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:id="@+id/buy"
            >
        </Button>
        <Button
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="购(租)厂房"
            android:drawableTop="@drawable/shortloan2"
            android:background="@null"
            android:textColor="#000000"
            android:id="@+id/buy_workshop"
            android:layout_marginLeft="5dp"
            >
        </Button>
        <Button
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="新建生产线"
            android:drawableTop="@drawable/productline1"
            android:background="@null"
            android:textColor="#000000"
            android:id="@+id/createline"
            android:layout_marginLeft="5dp"
            >
        </Button>
        <Button
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="在建生产线"
            android:drawableTop="@drawable/productline2"
            android:background="@null"
            android:textColor="#000000"
            android:id="@+id/construction"
            android:layout_marginLeft="5dp"
            >
        </Button>

        <Button
            android:id="@+id/soldline"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:drawableTop="@drawable/sellline2"
            android:text="出售生产线"
            android:textColor="#000000"
            android:textSize="15dp"></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="生产线转产"
            android:drawableTop="@drawable/changeline1"
            android:background="@null"
            android:textColor="#000000"
            android:id="@+id/changeline"
            android:layout_marginLeft="5dp"
            >
        </Button>
        <Button
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="继续转产"
            android:drawableTop="@drawable/changeline2"
            android:background="@null"
            android:textColor="#000000"
            android:id="@+id/continuechange"
            android:layout_marginLeft="5dp"
            >
        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="开始生产"
            android:drawableTop="@drawable/product1"
            android:background="@null"
            android:textColor="#000000"
            android:id="@+id/startproduction"
            android:layout_marginLeft="5dp"
            >
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:textSize="15dp"
            android:text="更新应收款账"
            android:drawableTop="@drawable/update1"
            android:background="@null"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:id="@+id/update"
            >
        </Button>
    </LinearLayout>
