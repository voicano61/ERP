<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"></TextView>
        <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="选择项"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/textview_border">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="厂房"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/textview_border">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="容量"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/textview_border">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="剩余容量"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/textview_border">
        </TextView>
    </TableRow>
    </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:visibility="gone"
                android:id="@+id/r1">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_style"
                        android:id="@+id/c1">
                    </CheckBox>
                </LinearLayout>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/name1">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/capacity1">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/residual1">
                </TextView>
            </TableRow>
            <TableRow
                android:visibility="gone"
                android:id="@+id/r2">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_style"
                        android:id="@+id/c2">
                    </CheckBox>
                </LinearLayout>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/name2">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/capacity2">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/residual2">
                </TextView>
            </TableRow>
            <TableRow
                android:visibility="gone"
                android:id="@+id/r3">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_style"
                        android:id="@+id/c3">
                    </CheckBox>
                </LinearLayout>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/name3">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/capacity3">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/residual3">
                </TextView>
            </TableRow>
            <TableRow
                android:visibility="gone"
                android:id="@+id/r4">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_style"
                        android:id="@+id/c4">
                    </CheckBox>
                </LinearLayout>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/name4">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/capacity4">
                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:id="@+id/residual4">
                </TextView>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"></TextView>
    </LinearLayout>
</LinearLayout>